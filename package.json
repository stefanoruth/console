{
	"name": "valon",
	"version": "0.1.0-alpha.4",
	"keywords": [
		"typescript",
		"cli",
		"console",
		"valon",
		"argument",
		"args",
		"option",
		"parser",
		"parsing",
		"cli",
		"command"
	],
	"license": "MIT",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/stefanoruth/valon-cli.git"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/@stefanoruth"
	},
	"dependencies": {},
	"scripts": {
		"clean": "rm -rf dist/ && rm -rf coverage/",
		"build": "tsc",
		"watch": "tsc --watch",
		"test": "jest --updateSnapshot",
		"test:watch": "jest --updateSnapshot --watchAll",
		"test:coverage": "jest --updateSnapshot --collectCoverage=true",
		"lint": "tslint -c ./tslint.json ./src/* ./example/src/*",
		"ci:test": "jest --collectCoverage=true -u",
		"ci:coverage": "coveralls < ./coverage/lcov.info",
		"docs:dev": "vuepress dev docs",
		"docs:build": "vuepress build docs",
		"docs:deploy": "./docs/deploy.sh"
	},
	"files": [
		"dist"
	],
	"bin": {
		"valon": "./dist/cli.js"
	},
	"devDependencies": {
		"@types/jest": "^24.0.18",
		"@types/node": "^12.7.9",
		"coveralls": "^3.0.6",
		"jest": "^24.9.0",
		"ts-jest": "^24.1.0",
		"ts-mockery": "^1.2.0",
		"tslint": "^5.20.0",
		"tslint-config-prettier": "^1.17.0",
		"typescript": "^3.6.3",
		"vuepress": "^1.1.0"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"collectCoverage": false,
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.ts"
		],
		"testMatch": [
			"<rootDir>/tests/**/*.test.ts"
		],
		"setupFiles": [
			"<rootDir>/tests/setup.ts"
		]
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"proseWrap": "always",
		"jsxBracketSameLine": true,
		"bracketSpacing": true,
		"arrowParens": "avoid",
		"printWidth": 120
	}
}
