{
	"name": "kodo-console",
	"version": "0.1.0",
	"license": "MIT",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"dependencies": {
		"@types/node": "^12.7.1",
		"typescript": "^3.5.3"
	},
	"scripts": {
		"clean": "rm -rf dist/",
		"build": "tsc",
		"watch": "tsc --watch",
		"ex:build": "tsc --build ./example/tsconfig.json",
		"ex:watch": "tsc --build ./example/tsconfig.json --watch",
		"test": "jest --verbose=false",
		"test:watch": "yarn test --watchAll",
		"test:coverage": "yarn test --collectCoverage=true",
		"lint": "tslint -c ./tslint.json ./src/* ./example/src/*",
		"ci": "jest --coverage --coverageReporters=text-lcov | coveralls",
		"docs:dev": "vuepress dev docs",
		"docs:build": "vuepress build docs"
	},
	"devDependencies": {
		"@types/jest": "^24.0.17",
		"coveralls": "^3.0.6",
		"jest": "^24.8.0",
		"ts-jest": "^24.0.2",
		"ts-mockery": "^1.1.0",
		"tslint": "^5.18.0",
		"tslint-config-prettier": "^1.17.0",
		"vuepress": "^1.0.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"collectCoverage": false,
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.ts"
		],
		"testMatch": [
			"<rootDir>/tests/**/*.test.ts"
		],
		"setupFiles": [
			"<rootDir>/tests/setup.ts"
		]
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"proseWrap": "always",
		"jsxBracketSameLine": true,
		"bracketSpacing": true,
		"arrowParens": "avoid",
		"printWidth": 120
	}
}
